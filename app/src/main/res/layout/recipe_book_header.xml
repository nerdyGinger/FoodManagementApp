<?xml version="1.0" encoding="utf-8"?>

<RelativeLayout
    android:id="@+id/customRecipeBookContainer"
    android:layout_width="wrap_content"
    android:layout_height="wrap_content"
    xmlns:android="http://schemas.android.com/apk/res/android"
    >

    <TextView
        android:id="@+id/bookContainerLabel"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:textColor="@color/custom_text_color"
        android:textSize="16sp"
        android:textStyle="bold"
        android:layout_margin="5dp"
        android:text="Recipe Book:"
        />

    <Button
        android:id="@+id/bookContainerBtn"
        android:layout_width="55dp"
        android:layout_height="30dp"
        android:layout_toEndOf="@+id/bookContainerName"
        android:padding="2dp"
        android:textSize="12sp"
        android:layout_margin="5dp"
        android:text="View"
        />

    <TextView
        android:id="@+id/bookContainerName"
        android:layout_width="200dp"
        android:layout_height="wrap_content"
        android:textColor="@color/custom_text_color"
        android:layout_margin="5dp"
        android:layout_below="@+id/bookContainerLabel"
        android:text="PREVIEW"
        />

</RelativeLayout>