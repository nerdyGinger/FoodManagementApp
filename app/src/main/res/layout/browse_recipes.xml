<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    android:orientation="vertical" android:layout_width="match_parent"
    android:layout_height="match_parent"
    >

    <SearchView
        android:id="@+id/browseRecipesSearchBar"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        />

    <androidx.core.widget.NestedScrollView
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_below="@+id/browseRecipesSearchBar">

        <RelativeLayout
            android:layout_width="wrap_content"
            android:layout_height="wrap_content">

            <TextView
                android:id="@+id/browseCategoryRecommended"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Recommended"
                android:layout_alignParentTop="true"
                android:layout_margin="10dp"
                />

            <androidx.recyclerview.widget.RecyclerView
                android:id="@+id/browseScrollOne"
                android:layout_width="match_parent"
                android:layout_height="75dp"
                android:layout_below="@+id/browseCategoryRecommended"
                android:layout_margin="10dp">

            </androidx.recyclerview.widget.RecyclerView>

            <TextView
                android:id="@+id/browseCategoryTwo"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Sample Category"
                android:layout_below="@+id/browseScrollOne"
                android:layout_margin="10dp"
                />

            <androidx.recyclerview.widget.RecyclerView
                android:layout_width="match_parent"
                android:layout_height="75dp"
                android:layout_below="@+id/browseCategoryTwo"
                android:layout_margin="10dp">

            </androidx.recyclerview.widget.RecyclerView>

        </RelativeLayout>

    </androidx.core.widget.NestedScrollView>

</RelativeLayout>