<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    android:orientation="vertical" android:layout_width="match_parent"
    android:layout_height="wrap_content">

    <TextView
        android:id="@+id/addInventoryInfo"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentTop="true"
        android:layout_centerInParent="true"
        android:text="Add Item to Inventory"
        android:textSize="18sp"
        android:textStyle="bold"
        />

    <androidx.appcompat.widget.AppCompatAutoCompleteTextView
        android:id="@+id/addInventorySearch"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:defaultFocusHighlightEnabled="true"
        android:layout_centerInParent="true"
        android:layout_below="@+id/addInventoryInfo"
        android:layout_margin="15dp"
        android:hint="Search item name in database"
        />

    <EditText
        android:id="@+id/addInventoryQuantity"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:hint="How much do you have?"
        android:layout_below="@+id/addInventorySearch"
        android:layout_centerInParent="true"
        android:textSize="16sp"
        android:layout_margin="15dp"
        />

    <RelativeLayout
        android:id="@+id/quantityContainer"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_below="@+id/addInventoryQuantity"
        android:layout_centerInParent="true"
        >

        <TextView
            android:id="@+id/addInventoryQuantityInfo"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Enter unit and stock level below to stock tracking"
            android:layout_margin="15dp"
            android:layout_alignParentTop="true"
            android:layout_centerInParent="true"
            />

        <Spinner
            android:id="@+id/addInventoryUnit"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_margin="15dp"
            android:layout_alignParentStart="true"
            android:layout_below="@+id/addInventoryQuantityInfo"
            />

        <SeekBar
            android:id="@+id/addInventoryStockMeter"
            android:layout_width="180dp"
            android:layout_height="50dp"
            android:max="100"
            android:progress="50"
            android:layout_alignParentEnd="true"
            android:layout_toEndOf="@+id/addInventoryUnit"
            android:layout_below="@+id/addInventoryQuantityInfo"
            android:rotation="270"
            android:layout_margin="15dp"
            />
    </RelativeLayout>

    <Button
        android:id="@+id/addInventoryCancelBtn"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentStart="true"
        android:layout_below="@+id/quantityContainer"
        android:text="Cancel"
        />

    <Button
        android:id="@+id/addInventoryAddBtn"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentEnd="true"
        android:layout_below="@+id/quantityContainer"
        android:text="Add"
        />

</RelativeLayout>