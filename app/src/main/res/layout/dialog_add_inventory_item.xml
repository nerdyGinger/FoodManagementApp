<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    android:orientation="vertical" android:layout_width="match_parent"
    android:layout_height="match_parent">

    <androidx.appcompat.widget.SearchView
        android:id="@+id/addInventorySearch"
        android:layout_width="match_parent"
        android:layout_height="wrap_content">

    </androidx.appcompat.widget.SearchView>

    <EditText
        android:id="@+id/addInventoryQuantity"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:hint="How much do you have?"
        android:layout_below="@+id/addInventorySearch"
        android:layout_centerInParent="true"
        android:textSize="16sp"
        android:layout_margin="15dp"
        />

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_below="@+id/addInventoryQuantity"
        android:layout_centerInParent="true"
        >

        <TextView
            android:id="@+id/addInventoryQuantityInfo"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Would you like to track how much you have?"
            android:layout_margin="15dp"
            android:layout_centerInParent="true"
            />

        <Spinner
            android:id="@+id/addInventoryUnit"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_margin="15dp"
            android:layout_below="@+id/addInventoryQuantityInfo"
            />

        <SeekBar
            android:id="@+id/addInventoryStockMeter"
            android:layout_width="180dp"
            android:layout_height="50dp"
            android:layout_toEndOf="@+id/addInventoryUnit"
            android:layout_below="@+id/addInventoryQuantityInfo"
            android:rotation="270"
            android:layout_margin="15dp"
            />
    </RelativeLayout>

    <Button
        android:id="@+id/addInventoryCancelBtn"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentBottom="true"
        android:layout_margin="15dp"
        android:text="Cancel"
        />

    <Button
        android:id="@+id/addInventoryAddBtn"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentBottom="true"
        android:layout_alignParentEnd="true"
        android:layout_margin="15dp"
        android:text="Add"
        />

</RelativeLayout>